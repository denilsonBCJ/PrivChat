<SignupScreen>:
    canvas.before:
        Color:
            rgba: 0.1, 0.1, 0.1, 1  # Fundo escuro
        Rectangle:
            pos: self.pos
            size: self.size

    FloatLayout:
        MDCard:
            size_hint: 0.9, 0.7
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            elevation: 12
            radius: [20]
            md_bg_color: 0.15, 0.15, 0.15, 1  # Cinza escuro
            padding: "20dp"

            BoxLayout:
                orientation: "vertical"
                spacing: "20dp"
                size_hint_y: None
                height: self.minimum_height
                pos_hint: {"center_x": 0.5, "center_y": 0.5}

                MDLabel:
                    text: "Cadastro"
                    font_style: "H5"
                    size_hint_y: None
                    height: self.texture_size[1]
                    halign: "center"
                    theme_text_color: "Custom"
                    text_color: 1, 1, 1, 1  # Texto branco

                MDTextField:
                    id: username
                    hint_text: "Usu√°rio"
                    size_hint_x: 0.9
                    mode: "rectangle"
                    pos_hint: {"center_x": 0.5}
                    text_color: 1, 1, 1, 1  # Texto branco
                    line_color_focus: 0.2, 0.6, 1, 1  # Azul claro
                    icon_right: "account"

                MDTextField:
                    id: email
                    hint_text: "Email"
                    size_hint_x: 0.9
                    mode: "rectangle"
                    pos_hint: {"center_x": 0.5}
                    text_color: 1, 1, 1, 1
                    line_color_focus: 0.2, 0.6, 1, 1
                    icon_right: "email"

                MDTextField:
                    id: password
                    hint_text: "Senha"
                    password: True
                    size_hint_x: 0.9
                    mode: "rectangle"
                    pos_hint: {"center_x": 0.5}
                    text_color: 1, 1, 1, 1
                    line_color_focus: 0.2, 0.6, 1, 1
                    icon_right: "eye-off"

                MDFillRoundFlatButton:
                    text: "Cadastrar"
                    md_bg_color: 0.2, 0.6, 1, 1  # Azul claro
                    text_color: 1, 1, 1, 1
                    pos_hint: {"center_x": 0.5}
                    on_press: root.signup()

                MDTextButton:
                    text: "Voltar para Login"
                    theme_text_color: "Custom"
                    text_color: 0.2, 0.6, 1, 1
                    pos_hint: {"center_x": 0.5}
                    on_press: root.go_to_login()
