<FriendsScreen>:
    canvas.before:
        Color:
            rgba: 0.1, 0.1, 0.1, 1  # Fundo escuro
        Rectangle:
            pos: self.pos
            size: self.size

    FloatLayout:
        MDCard:
            size_hint: 0.9, 0.85
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            elevation: 12
            radius: [20]
            md_bg_color: 0.15, 0.15, 0.15, 1  # Cinza escuro para o fundo do cartão
            padding: "20dp"

            BoxLayout:
                orientation: "vertical"
                spacing: "15dp"
                size_hint_y: None
                height: self.minimum_height
                pos_hint: {"top": 1}  # Alinha o BoxLayout no topo do MDCard

                # Título "Amigos"
                MDLabel:
                    text: "Amigos"
                    font_style: "H5"
                    size_hint_y: None
                    height: self.texture_size[1]
                    halign: "center"
                    theme_text_color: "Custom"
                    text_color: 0.2, 1, 0.2, 1  # Verde fluorescente para o título

                # Campo para adicionar amigo
                BoxLayout:
                    orientation: "horizontal"
                    spacing: "10dp"
                    size_hint_y: None
                    height: "50dp"

                    MDTextField:
                        id: friend_username
                        hint_text: "Nome de usuário"
                        size_hint_x: 0.7
                        mode: "rectangle"
                        text_color: 1, 1, 1, 1  # Texto branco
                        line_color_focus: 0.2, 1, 0.2, 1  # Verde fluorescente
                        icon_right: "account-plus"
                        background_normal: ""  # Remove o fundo padrão
                        background_active: ""  # Remove o fundo ativo

                    MDFillRoundFlatButton:
                        text: "Adicionar"
                        md_bg_color: 0.2, 1, 0.2, 1  # Verde fluorescente
                        text_color: 0, 0, 0, 1  # Texto preto para melhor contraste
                        size_hint_x: 0.3
                        on_press: root.add_friend()

                # Espaço vazio para separar o campo de input da lista
                Widget:
                    size_hint_y: None
                    height: "10dp"

            # Lista de amigos (ScrollView)
            ScrollView:
                size_hint_y: 1  # Ocupa o espaço restante
                pos_hint: {"top": 0.8}  # Posiciona a lista abaixo do campo de input
                bar_width: 10  # Largura da barra de rolagem
                effect_cls: "ScrollEffect"  # Efeito de rolagem suave

                MDList:
                    id: friends_list
                    size_hint_y: None
                    height: self.minimum_height
                    spacing: "10dp"
                    padding: "10dp"  # Espaçamento interno

                    # Estilo para os itens da lista
                    OneLineListItem:
                        theme_text_color: "Custom"
                        text_color: 0.2, 1, 0.2, 1  # Verde fluorescente para os itens da lista
                        size_hint_y: None
                        height: "40dp"
