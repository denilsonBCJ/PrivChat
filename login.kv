<LoginScreen>:
    canvas.before:
        Color:
            rgba: 0.1, 0.1, 0.1, 1  # Fundo escuro
        Rectangle:
            pos: self.pos
            size: self.size

    FloatLayout:
        MDCard:
            size_hint: 0.9, 0.6
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            elevation: 12
            radius: [20]
            md_bg_color: 0.15, 0.15, 0.15, 1  # Cinza escuro
            padding: "20dp"

            BoxLayout:
                orientation: "vertical"
                spacing: "20dp"
                size_hint_y: None
                height: self.minimum_height
                pos_hint: {"center_x": 0.5, "center_y": 0.5}

                MDLabel:
                    text: "Login"
                    font_style: "H5"
                    size_hint_y: None
                    height: self.texture_size[1]
                    halign: "center"
                    theme_text_color: "Custom"
                    text_color: 0.2, 1, 0.2, 1  # Verde fluorescente

                MDTextField:
                    id: username
                    hint_text: "Usu√°rio"
                    size_hint_x: 0.9
                    mode: "rectangle"
                    pos_hint: {"center_x": 0.5}
                    text_color: 0.2, 1, 0.2, 1  # Verde fluorescente
                    line_color_focus: 0.2, 1, 0.2, 1  # Verde fluorescente ao focar
                    line_color_normal: 0.1, 0.1, 0.1, 1  # Cor normal da borda (preto)
                    icon_right: "account"
                    focus: True  # Adiciona foco ao campo ao ser clicado

                MDTextField:
                    id: password
                    hint_text: "Senha"
                    password: True
                    size_hint_x: 0.9
                    mode: "rectangle"
                    pos_hint: {"center_x": 0.5}
                    text_color: 0.2, 1, 0.2, 1  # Verde fluorescente
                    line_color_focus: 0.2, 1, 0.2, 1  # Verde fluorescente ao focar
                    line_color_normal: 0.1, 0.1, 0.1, 1  # Cor normal da borda (preto)
                    icon_right: "eye-off"
                    focus: True  # Adiciona foco ao campo ao ser clicado

                MDLabel:
                    id: error_label
                    text: ""
                    theme_text_color: "Custom"
                    text_color: 1, 0, 0, 1  # Vermelho para erro
                    halign: "center"
                    size_hint_y: None
                    height: "30dp"

                MDFillRoundFlatButton:
                    text: "Entrar"
                    md_bg_color: 0.2, 1, 0.2, 1  # Verde fluorescente
                    text_color: 1, 1, 1, 1
                    pos_hint: {"center_x": 0.5}
                    on_press: root.login()

                MDTextButton:
                    text: "Criar conta"
                    text_color: 0.2, 1, 0.2, 1  # Verde fluorescente
                    pos_hint: {"center_x": 0.5}
                    on_press: root.go_to_signup()
